<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="overheardsite.myapplication.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/sendDataButton"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:text="Join Friends in Prayer"
        android:textSize="17sp"
        android:textColor="@color/navyblue"
        android:layout_marginStart="32dp"
        android:background="@color/red"
        android:layout_marginEnd="32dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/WhenToGather"
        android:layout_width="0dp"
        android:layout_height="171dp"
        android:gravity="center_horizontal"
        android:text="@string/description"
        android:textSize="19sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/navyblue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/sendDataButton"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="177dp"
        android:layout_height="36dp"
        android:gravity="center_horizontal"
        android:format12Hour="hh:mm:ss a"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|normal"
        android:textColor="@color/navyblue"
        android:layout_toRightOf="@+id/sendDataButton"
        android:layout_toEndOf="@+id/sendDataButton"
        android:layout_marginEnd="106dp"
        android:layout_marginStart="106dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/WhenToGather"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="106dp"
        android:layout_marginRight="106dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:text="@string/biblequote"
        android:textStyle="italic|bold|normal"
        android:textColor="@color/navyblue"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="33dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>