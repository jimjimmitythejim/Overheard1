<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="overheardsite.myapplication.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/sendDataButton"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:text="Join Friends in Prayer"
        android:textSize="@dimen/button_fontSize"
        android:textColor="@color/navyblue"
        android:background="@color/red"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="63dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="79dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp" />

    <TextView
        android:id="@+id/WhenToGather"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:gravity="center_horizontal"
        android:text="@string/description"
        android:textSize="19sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/navyblue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="177dp"
        android:layout_height="36dp"
        android:gravity="center_horizontal"
        android:format12Hour="hh:mm:ss a"
        android:textSize="30sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|normal"
        android:textColor="@color/navyblue"
        android:layout_toRightOf="@+id/sendDataButton"
        android:layout_toEndOf="@+id/sendDataButton"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/WhenToGather"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="42dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:text="@string/biblequote"
        android:textStyle="italic|bold|normal"
        android:textColor="@color/navyblue"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="21sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textClock"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="58dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8:00 a.m. EST"
        android:textSize="18sp"
        android:textColor="@color/navyblue"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toLeftOf="@+id/textView16"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/WhenToGather"
        app:layout_constraintTop_toTopOf="@+id/textView16"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="28dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="108dp"
        android:layout_height="41dp"
        android:text="2:00 p.m. EST"
        android:textSize="18sp"
        android:textColor="@color/navyblue"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/WhenToGather"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/WhenToGather"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/WhenToGather" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9:00 p.m. EST"
        android:textSize="18sp"
        android:textColor="@color/navyblue"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="27dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        app:layout_constraintRight_toRightOf="@+id/WhenToGather"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/textView16"
        app:layout_constraintLeft_toRightOf="@+id/textView16"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/navyblue"
        android:gravity="center"
        android:textSize="16sp"
        android:text="TOTAL NUMBER OF PRAYERS SO FAR:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sendDataButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tot"
        android:layout_width="276dp"
        android:layout_height="27dp"
        android:textColor="@color/navyblue"
        android:textSize="16sp"
        android:gravity="center"
        android:text="0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>